<section>
  <%= render 'shared/user_card', user: @user %>

  <ul class='posts'>
    <% @user.posts.each_with_index do |post, index| %>
      <li class='post border1'>
        <h2><%= link_to post.title, user_post_path(@user, post) %></h2>
        <p><%= post.text %></p>

        <div class="comments-likes">
          <span>Comments(<%= post.comments_counter %>)</span>
          <span>Likes(<%= post.likes_counter %>)</span>
        </div>

        <% if post.comments_counter == 0 %>
          <div class='comments'>
            <p>No comments yet!</p>
          </div>
        <% end %>

        <% if post.comments_counter > 0 %>
          <ul class='comments'>
            <% post.five_recent_comments.each do |comment| %>
              <li class='comment'>
                <p><%= comment.author.name %></p>
                <p class='comment-box border1'><%= comment.text %></p>
              </li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
</section>