<section class='create'>
  <h1>Create a new post</h1>

  <%= form_with model: @post, url: user_posts_path do |form| %>
    <div class="form-field">
      <%= form.label :title %>
      <%= form.text_field :title, placeholder: 'Enter post title', class: 'border1' %>
    </div>

    <div class="form-field">
      <%= form.label :text %>
      <%= form.text_area :text, placeholder: 'Enter post description', class: 'border1' %>
    </div>

    <div class="actions">
      <%= form.submit 'Create Post', class: 'btn btn-create' %>
    </div>
  <% end %>
</section>