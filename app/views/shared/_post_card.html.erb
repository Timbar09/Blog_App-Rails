<div class='card'>
  <h3><%= link_to post.title, user_post_path(@user, post) %></h3>
  
  <% if post.text.length > 100 %>
    <p>
      <%= truncate(post.text, length: 100) %> 
    </p>
  <% else %>
    <p><%= post.text %></p>
  <% end %>

  <div class="comments-likes">
    <span>Comments(<%= post.comments_counter %>)</span>
    <span>Likes(<%= post.likes_counter %>)</span>
  </div>
</div>