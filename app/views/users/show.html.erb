<section>
  <div class='user_info border1'>
    <div class="photo border2">
      <img src="<%= @user.photo %>" alt="<%= @user.name %>">
    </div>

    <div class="details">
      <h2><%= @user.name %></h2>
      <p>Posts(<%= @user.posts.count %>)</p>
    </div>
  </div>

  <p class='bio'><%= @user.bio %></p>

  <ul class='posts'>
    <% @user.three_recent_posts.each_with_index do |post, index| %>
      <li class='post border1'>
        <h2><%= link_to post.title, user_post_path(@user, post) %></h2>
        
        <% if post.text.length > 100 %>
          <p>
            <%= truncate(post.text, length: 100) %> 
          </p>
        <% else %>
          <p><%= post.text %></p>
        <% end %>

        <div class="comments-likes">
          <span>Comments(<%= post.comments_counter %>)</span>
          <span>Likes(<%= post.likes_counter %>)</span>
      </li>
    <% end %>
  </ul>

  <div class='see-all'><%= link_to 'See all posts', user_posts_path(@user), class: 'border1' %></div>
</section>