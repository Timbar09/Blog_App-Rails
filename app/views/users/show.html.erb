<section>
  <%= render 'shared/user_card', user: @user %>

  <div class='bio'>
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>

  <div class='new-link'>
    <%= link_to 'Create a new post', new_user_post_path(@user), class: 'cta border1' %>
  </div>

  <ul class='posts'>
    <% if @user.posts.empty? %>
      <li class='post border1'>This user has no posts yet!</li>
    <% end %>

    <% @user.three_recent_posts.each_with_index do |post, index| %>
      <li class='post border1'>
        <%= render 'shared/post_card', post: post %>
      </li>
    <% end %>
  </ul>

  <% unless @user.posts.empty? %>
    <div class='see-all'><%= link_to 'See all posts', user_posts_path(@user), class: 'border1' %></div>
  <% end %>
</section>